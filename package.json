{
  "name": "template",
  "version": "0.0.1",
  "description": "Template App",
  "author": "Petar VujoviÄ‡",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:hot": "nest build --watch --webpack",
    "build:image": "docker build . -t vegelibri-backend:latest",
    "compose:dev": "docker-compose -f docker-compose.dev.yml up --force-recreate",
    "compose:prod": "docker-compose up --force-recreate",
    "start": "nest start",
    "start:hot": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "fix": "yarn lint && yarn format",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "db:gen": "yarn typeorm migration:generate -n",
    "db:create": "yarn typeorm migration:create -n",
    "db:migrate": "yarn typeorm migration:run",
    "seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed"
  },
  "dependencies": {
    "@godaddy/terminus": "^4.3.1",
    "@nestjs/common": "^6.7.2",
    "@nestjs/config": "^0.0.9",
    "@nestjs/core": "^6.7.2",
    "@nestjs/graphql": "^6.5.3",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/platform-fastify": "^6.10.14",
    "@nestjs/terminus": "^6.5.6",
    "@nestjs/typeorm": "^6.2.0",
    "apollo-server-fastify": "^2.14.2",
    "bcrypt": "^5.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "fastify-compress": "^2.0.0",
    "fastify-cookie": "^3.6.0",
    "fastify-cors": "^3.0.2",
    "fastify-csrf": "^1.0.3",
    "fastify-helmet": "^3.0.2",
    "fastify-rate-limit": "^3.0.1",
    "graphql": "^14.5.8",
    "graphql-depth-limit": "^1.1.0",
    "graphql-tag-pluck": "^0.8.7",
    "graphql-tools": "^4.0.6",
    "passport": "^0.4.1",
    "pg": "^7.17.0",
    "pino-pretty": "^3.6.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "type-graphql": "^0.17.6",
    "typeorm": "^0.2.22",
    "typeorm-seeding": "^1.2.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.11",
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/bcrypt": "^3.0.0",
    "@types/faker": "^4.1.10",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.0.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.6.3",
    "webpack-node-externals": "^1.7.2"
  }
}
